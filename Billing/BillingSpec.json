    "servicechargeinfoaccountresponse": {
        "type" : "object",
        "description" : "한 계정의 서비스별 정보 및 서버 자원 리스트",
        "properties" : {
            "servicechargeinfo": {
                "type" : "array",
                "description" : "서비스별 과금 내역 조회",
                "items" : {
                    "type" : "obejct",
                    "properties" : {
                        "service": {
                            "type" : "string", 
                            "desciprion" : "서비스 이름",
                            "enum" : ["ucloud server"],
                            "example" : "ucloud server"
                        },
                        "mdcode": {
                            "type": "string",
                            "description" : "포탈에서 관리하는 서비스 구분 코드",
                            "format": "Mnnnnn",
                            "example": "M12345"
                        },
                        "group_admin_account": {
                            "type": "string",
                            "description": "account가 소속된 그룹 admin 계정의 정보를 수록",
                            "example": "kt@kt.com"
                        },
                        "pay_account": {
                            "type": "string",
                            "description": "청구 위임을 했을 경우 청구 위임을 받는 계정을 의미함.",
                            "example": "pay@kt.com"
                        },
                        "bill_month": {
                            "type": "string",
                            "format": "YYYY-MM",
                            "example": "2021-11"
                        },
                        "pay_amt": {
                            "type": "integer",
                            "description": "전체 과금 금액, discount amt가 반영된 요금",
                            "example": 616728
                        },
                        "total_discount_amt": {
                            "type": "integer",
                            "description": "전체 할인 요금",
                            "example": 11405
                        }
                    }
                }
            },
            "serverserviceinfo": {
                "type" : "array",
                "description" : "서버 서비스와 관련된 과금 관련 정보를 조회",
                "items":{
                    "type" : "object",
                    "properties" : {
                        "bill_month" : {
                            "type" : "string", 
                            "format" : "YYYY-MM"
                        },
                        "reg_dttm" : {
                            "type" : "string",
                            "format" : "YYYY-MM-DD hh:mm:ss.s"
                        },
                        "del_dttm" : {
                            "type" : "string",
                            "format" : "YYYY-MM-DD hh:mm:ss.s"
                        },
                        "id" : {
                            "type" : "string",
                            "description" : "id 정보를 의미함."
                        },
                        "mdcode": {
                            "type": "string",
                            "description": "포탈에서 관리하는 서비스 구분 코드",
                            "format": "Mnnnnn",
                            "example": "M12345"
                        },
                        "name": {
                            "type" : "string",
                            "description" : "display name을 의미함. 콘솔에 표시되는 자원 이름",
                            "example" : "1.1.1.1"
                        },
                        "pay_amt" : {
                            "type": "integer",
                            "description": "전체 과금 금액, discount amt가 반영된 요금",
                            "example": 616728
                        },
                        "type" : {
                            "type" : "string",
                            "description" : "세부 서비스 타입을 의미함",
                            "example" : "IP"
                        }
                    }
                }
                
            }
        }
    },
    "server": {
        "type": "array",
        "description": "서버에 대한 과금 정보를 수록하고 있음. 장용운 과장이 현재 제공가능한 내용을 정리하였음.",
        "items": {
            "type": "object",
            "description": "vm에 과금에 대한 정보 수록",
            "properties": {
                "vm": {
                    "type": "object",
                    "properties": {
                        "vm name": {
                            "type": "string",
                            "description": "vm의 이름을 의미함",
                            "example": "hello vm"
                        },
                        "location": {
                            "type": "string",
                            "description": "서비스가 제공되는 장소를 의미함.",
                            "enum": [
                                "D1(DX-M1)",
                                "G2(KOR-Seoul M2)",
                                "G1(기존 Zone)"
                            ]
                        },
                        "monthly pay amt": {
                            "type": "array",
                            "description": "최초 생성부터 월별 요금",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "contract_info": {
                                        "type": "object",
                                        "properties": {
                                            "contract term": {
                                                "type": "string",
                                                "example": "3 years"
                                            },
                                            "contract period": {
                                                "type": "string",
                                                "format": "yyyymmdd - yyyymmdd",
                                                "example": "20211110 - 20211129"
                                            }
                                        }
                                    },
                                    "vCore": {
                                        "type": "integer",
                                        "description": "Core 수를 의미"
                                    },
                                    "memory type": {
                                        "type": "string",
                                        "description": "메모리 유형별로 구분",
                                        "enum": [
                                            "표준 Memory Server",
                                            "High Memory Server"
                                        ]
                                    },
                                    "memory": {
                                        "type": "integer",
                                        "description": "Memory 용량을 의미함. 단위는 Giga"
                                    },
                                    "bill_month": {
                                        "type": "string",
                                        "format": "YYYY-MM",
                                        "example": "2021-11"
                                    },
                                    "total usage time": {
                                        "type": "integer",
                                        "description": "전체 사용 시간, 1초 이상 사용시 1시간으로 올림 처리",
                                        "example": 20
                                    },
                                    "total usage days": {
                                        "type": "integer",
                                        "description": "전체 사용 일자를 의미함. 1초 이상 사용시 1일로 올림 처리",
                                        "example": 20
                                    },
                                    "termType": {
                                        "type": "string",
                                        "description": "요금제를 의미함",
                                        "enum": [
                                            "OnDemand(time)",
                                            "Reserved(Month)"
                                        ]
                                    },
                                    "pay_amt": {
                                        "type": "integer",
                                        "example": 30000
                                    }
                                }
                            }
                        },
                        "usage": {
                            "type": "array",
                            "description": "서비스 시작부터 종료까지의 사용시간에 대한 근거",
                            "items": {
                                "type": "string",
                                "description": "VM의 생성일부터 시작하는 시작 정지 이력을 의미함.",
                                "format": "yyyy-mm-dd hh:mm ~ yyyy-mm-dd hh:mm"
                            }
                        }
                    }
                }
            }
        }
    }
}